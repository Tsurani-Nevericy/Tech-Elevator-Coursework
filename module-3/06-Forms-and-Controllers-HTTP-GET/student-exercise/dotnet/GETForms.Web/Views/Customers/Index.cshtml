@model CustomerViewModel
@{
    ViewData["Title"] = "Index";
    string GetActiveString(bool isActive)
    {
        return isActive ? "Yes" : "No";
    }
}

@*<h2>Index</h2>*@

    <form asp-controller="Customers" asp-action="Search" method="get">

        <label asp-for="Search">Search: </label>
        <input asp-for="Search" />
        @*<label asp-for="SortBy">Order By: </label>
        <input asp-for="SortBy" />*@
        <select asp-for="SortBy" asp-items="Model.Sorts"></select>
        <button>Search</button>

    </form>
<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Active</th>
    </tr>
    
    @if (Model != null) {
        foreach (Customer c in Model.Customers)
        {
        <tr>
            <td>@c.FirstName @c.LastName</td>
            <td>@c.Email</td>
            <td>@GetActiveString(c.IsActive)</td>
        </tr>
        }
    }
</table>

